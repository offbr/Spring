<script type="text/javascript">

function getPassword(num, mode) {
	var f = document.passFrm;
	//f.b_no.value = b_no;
	$('#b_pass').focus();
	$('#myModal').modal('show');
	f.action = mode;
}

function checkPwdFrm() {
	var f = document.passFrm;
	if (f.infutpass.value == "") {
		alert("비밀번호를 입력해 주세요.");
		f.infutpass.focus();
		return;
	}
	if(f.b_pass.value == f.)
	f.submit();
}

function closePwd() {
	$('#myModal').modal('hide');
}

</script>
