package pack.upload;

import java.io.InputStream;
import java.io.OutputStream;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.multipart.MultipartFile;

@Controller
public class UploadController {
	@Autowired
	private FileValidator fileValidator;
	
	
	@RequestMapping(value="upload", method=RequestMethod.GET)
	public String getUploadForm(@ModelAttribute("uploadFile") UploadBean uploadBean){
		return "uploadform";
	}
	
	@RequestMapping(value="upload", method=RequestMethod.POST)
	public String fileUpload(@ModelAttribute("uploadFile") UploadBean uploadBean, BindingResult result){
		InputStream inputStream = null;
		OutputStream outputStream = null;
		
		MultipartFile file = uploadBean.getFile();
		fileValidator.validate(uploadBean, result);
		
		
		return "uploadform";
	}
}
















